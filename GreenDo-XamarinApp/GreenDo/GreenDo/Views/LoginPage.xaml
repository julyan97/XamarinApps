<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GreenDo.Views.LoginPage"
             BackgroundImageSource="imgLogin.png">

    <StackLayout Grid.Row="1" Margin="15, 300, 0, 0">
        <Label Text="Username" TextColor="White" FontSize="16" />
        <Entry Placeholder="Enter username" Text="{Binding Username}" FontSize="16"/>
        <Label Text="Password" TextColor="White" FontSize="16" />
        <Entry FontSize="16" Placeholder="Enter password" IsPassword="True"/>
        <Button Text="Sign in" Command="{Binding SigninCommand}" BackgroundColor="White" CornerRadius="15" BorderColor="White" FontSize="15"/>
        <Label Text="Don't have an account? Sign up here" TextColor="White" HorizontalOptions="Center" TextDecorations="Underline"/>
    </StackLayout>

</ContentPage>